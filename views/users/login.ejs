<%- layout("layouts/boilerplate")%>
<div class="row col-12 mt-2">
    <div class="col-5 offset-3">
    <h3>Login to your Tripix account!</h3><br/>

    <form method="POST" action="/login" novalidate class="needs-validation">
        <div class="mb-3" >
            <lable for="username" class="form-label">Username</lable>
            <input name="username"  type="text" class="form-control" id="username" required >
        </div>

        <div class="mb-3" >
            <lable for="password" class="form-label">Password</lable>
            <input name="password"  type="password" class="form-control" id="password" required >
            <div class="invalid-feedback">Password is required</div>
        </div>
        
        <button class="btn btn-success">Login</button>
    </form>
</div>
</div>