<%- layout("layouts/boilerplate")%>
<body>
    
    <style>
        
    </style>
    <!-- <h1>ALL listings</h1> -->
    <style>
        
#filters {
  display: flex;
  flex-wrap: wrap;
  margin-top: 1rem;
  justify-content: space-around;
  margin-right: 5rem;
  margin-left: 3rem;
}
.filter {
  text-align: center;
  margin-right: 1rem;
  opacity: 0.7;
}
.filter:hover {
  opacity: 1;
  cursor: pointer;
}
.filter p {
  font-size: 0.8rem;
}
.tax-info {
  display: none;
}
.tax-toggle {
  border: 1px solid black;
  border-radius: 2rem;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 1rem;
  height: 3rem;
  margin-left: 3rem;
}

.filter-link {
  text-decoration: none;
  color: rgb(69, 67, 67);
}
.filter-link:hover {
  color: #fe424d;
}

    </style>
    
     <div id="filters">
        <div class="filter">
            <a href="/listings/category/Trending" class="filter-link"><div><i class="fa-solid fa-fire"></i> </div><p>Trending</p></a>
        </div>
        <div class="filter">
            <a href="/listings/category/Rooms" class="filter-link"><div><i class="fa-solid fa-tent"></i> </div><p>Rooms</p></a>
        </div>
        <div class="filter">
            <a href="/listings/category/Iconic cities" class="filter-link"><div><i class="fa-solid fa-mountain-city"></i> </div><p>Iconic cities</p></a>
        </div>
        <div class="filter">
            <a href="/listings/category/Mountains" class="filter-link"><div><i class="fa-solid fa-mountain"></i> </div><p>Mountains</p></a>
        </div>
        <div class="filter">
            <a href="/listings/category/Castles" class="filter-link"><div><i class="fa-brands fa-fort-awesome"></i> </div><p>Castles</p></a>
        </div>
        <div class="filter">
            <a href="/listings/category/Camping" class="filter-link"><div><i class="fa-solid fa-campground"></i> </div><p>Camping</p></a>
        </div>
        <div class="filter">
            <a href="/listings/category/Farms" class="filter-link"><div><i class="fa-solid fa-cow"></i></div><p>Farms</p></a>
        </div>
        <div class="filter">
            <a href="/listings/category/Pools" class="filter-link"><div><i class="fa-solid fa-person-swimming"></i></div><p>pools</p></a>
        </div>
        <div class="filter">
            <a href="/listings/category/Arctic" class="filter-link"><div><i class="fa-regular fa-snowflake"></i></div><p>Arctic</p></a>
        </div>
        <div class="filter">
            <a href="/listings/category/Beach" class="filter-link" style="font-size:xx-small;"><div><span class="material-symbols-outlined">surfing</span></div><p>Beach</p></a>
        </div>

        <div class="tax-toggle">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="switchCheckReverse">
                <label class="form-check-label" for="switchCheckReverse">Display Including Taxes</label>
            </div>
        </div>
     </div>
    
    <div class="row row-cols-xl-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% if (alllistings.length === 0) { %>
        <p>No listings found!</p>
        <% }else {%>
        <%for(let listing of alllistings){%>
        <a href="/listings/<%=listing._id%>" class="listing-link">
            <div class="card mb-3 noborder listing-div" >
                <img src="<%=listing.image.url%>" class="card-img-top" alt="tripix_listing-image" style="height:20rem;">
                <div class="card-img-overlay">Tripix</div>
                <div class="card-body">
                    <p class="card-text"><b><%=listing.title%></b></p><p> &#8377 <%=listing.price.toLocaleString("en-IN")%> /night <i class="tax-info">&nbsp; &#43;18&#37; GST</i> </p>
                </div> 
            </div>
        </a>
        <%}%>
        <%}%>
    </div>

    <script>
        let taxSwitch=document.querySelector("#switchCheckReverse").addEventListener("click",()=>{
            let taxInfo=document.getElementsByClassName("tax-info");
            for(info of taxInfo){
                if(info.style.display!=="inline")
                info.style.display="inline";
                else info.style.display="none";
            }
        });

    </script>
</body>


