<%- layout("layouts/boilerplate")%>
<div class="row col-12">
    <div class="col-8 offset-2">
    <h3>Create a new Listing</h3><br/>

    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3" >
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]"  type="text" class="form-control" required >
            <div class="valid-feedback">Title looks good.</div>
        </div>
        
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>    
            <textarea name="listing[description]"  type="text" class="form-control" required></textarea>
            <div class="invalid-feedback">Description is required</div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">Price</lable>
            <input name="listing[price]"  type="text" class="form-control" required>
            <div class="invalid-feedback">Please enter valid price</div>
        </div>
        
        <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">Country</lable>
            <input name="listing[country]" type="text" class="form-control" onkeyup="this.value = this.value.toUpperCase();" required>
            <div class="invalid-feedback">Country is required</div>
        </div>
        </div>

        <div class="mb-3">
        <lable for="country" class="form-label">Choose a category for your listing</lable>
        <select class="form-control form-select" name="listing[category]" aria-label="Default select example" placeholder="choose a category">
            <option selected value="">Open this select menu</option>
            <option value="Campings">Campings</option>
            <option value="Castles">Castles</option>
            <option value="Desert">Desert</option>
            <option value="Pools">Pools</option>
            <option value="Arctic">Arctic</option>
            <option value="Rooms">Rooms</option>
            <option value="Trending">Trending</option>
            <option value="Iconic cities">Iconic cities</option>
            <option value="Farms">Farms</option>
            <option value="Mountains">Mountains</option>
            <option value="Beach">Beach</option>
        </select>
        </div>

        <div class="mb-3">
            <lable for="image" class="form-label">Upload Image</lable>
            <input name="listing[image]" type="file" class="form-control" required >
        </div>
        
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input name="listing[location]"  type="text" class="form-control" required>
            <div class="invalid-feedback">How will a user find you ?</div>
            <!-- <button id="findLocation" class="btn btn-primary mt-2">Locate on Map</button> -->
             <!-- Hidden inputs to send to backend -->
            <!-- <input type="hidden" id="latitude" name="latitude">
            <input type="hidden" id="longitude" name="longitude"> -->
        </div>
        
        <button class="btn btn-dark add-btn">Add</button>
    </form>
</div>
</div>